{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["src"]
}
